@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Admin Dashboard</h1>

    <div class="row">
        <!-- Card 1: Users -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage users, view their details, and more.</p>
                    <a href="#" class="btn btn-custom">Go to Users</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Orders -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <p class="card-text">Track orders, view status, and more.</p>
                    <a href="#" class="btn btn-success">Go to Orders</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Products -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">Manage your product listings.</p>
                    <a href="#" class="btn btn-warning">Go to Products</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Card 4: Reports -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">View detailed reports of sales, users, and more.</p>
                    <a href="#" class="btn btn-danger">Go to Reports</a>
                </div>
            </div>
        </div>

        <!-- Card 5: Settings -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Settings</h5>
                    <p class="card-text">Adjust settings for the admin panel.</p>
                    <a href="#" class="btn btn-info">Go to Settings</a>
                </div>
            </div>
        </div>
    </div>
</div>
