@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Link to the shared CSS file -->
<link rel="stylesheet" href="~/assets/css/departmentsproducts.css" />

<div class="addDepartmentContainer">
    <h1>Add New Brand</h1>

    <form>
        <div class="formGroup">
            <label for="brandName">Brand Name</label>
            <input type="text" id="brandName" class="inputField" placeholder="Enter brand name" required />
        </div>

        <div class="formGroup">
            <label for="brandImage">Upload Brand Image</label>
            <input type="file" id="brandImage" class="inputField" accept=".png, .jpg" required />
            <small class="fileTypeNotice">Only PNG or JPG formats are allowed.</small>
        </div>

        <button type="submit" class="saveBtn">Add Brand</button>
    </form>
</div>
