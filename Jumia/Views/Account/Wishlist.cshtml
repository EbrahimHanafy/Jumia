@{
    ViewData["Title"] = "Wish List";
    ViewBag.ActiveMenu = "Wishlist";
}

<link rel="stylesheet" href="~/assets/css/profileStyle.css">

<div class="d-flex">
    <nav class="profile-sidebar">
        <ul class="nav profile-nav">
            <li class="nav-item">
                <a class="nav-link @(ViewBag.ActiveMenu == "Profile" ? "active" : "")" href="/Account/Profile">Profile
                    Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.ActiveMenu == "Addresses" ? "active" : "")"
                    href="/Account/Addresses">Addresses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.ActiveMenu == "Orders" ? "active" : "")" href="/Account/Orders">Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.ActiveMenu == "Wishlist" ? "active" : "")" href="/Account/Wishlist">Wish
                    List</a>
            </li>
        </ul>
    </nav>

