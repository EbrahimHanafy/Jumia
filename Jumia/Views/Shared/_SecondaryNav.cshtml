@using Microsoft.AspNetCore.Identity;


<nav class="secondary-nav border-bottom">
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class="col-md-4 header-contact">
                <p>Let's talk! <strong>+02 0100 00 00 00</strong></p>
            </div>
            <div class="col-md-4 shipping-purchase text-center">
                <p>Free shipping on a purchase value of 200 EGP</p>
            </div>
            <div class="col-md-4 col-sm-12 user-items">
                <ul class="d-flex justify-content-end list-unstyled">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Account" asp-action="Profile"><p>Welcome, @User.Identity.Name!</p></a></li>

                        <form asp-controller="Account" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <li><button class="btn btn-primary btn-small" type="submit">Logout</button></li>
                        </form>

                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login"><i class="icon icon-user"></i></a></li>
                    }
                    <li><a href="cart.html"><i class="icon icon-shopping-cart"></i></a></li>
                    @* <li><a href="wishlist.html"><i class="icon icon-heart"></i></a></li> *@
                    @* <li class="user-items search-item pe-3">
                    <a href="#" class="search-button"><i class="icon icon-search"></i></a>
                    </li> *@
                </ul>
            </div>
        </div>
    </div>
</nav>
