<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Boxicons for icons -->
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/css/admin.css">
</head>

<body id="body-pd">
    <!-- Navigation bar -->
    <header class="header" id="header">
        <div class="header_img">
            <img src="https://i.imgur.com/hczKIze.jpg" alt="Admin Profile Picture" />
        </div>
        <div class="header_logout">
            <a href="#" class="nav_link">
                <i class="bx bx-log-out nav_icon"></i>
                <span class="nav_name">Sign Out</span>
            </a>
        </div>
    </header>

    <!-- Sidebar -->
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="/admin" class="nav_logo">
                    <i class="bx bx-layer nav_logo-icon"></i>
                    <span class="nav_logo-name">Admin Dashboard</span>
                </a>
                <div class="nav_list">
                    <a href="/admin" class="nav_link active">
                        <i class="bx bx-grid-alt nav_icon"></i>
                        <span class="nav_name">Dashboard</span>
                    </a>
                    <a href="/admin/users" class="nav_link">
                        <i class="bx bx-user nav_icon"></i>
                        <span class="nav_name">Users</span>
                    </a>
                    <a href="/admin/roles" class="nav_link">
                        <i class="bx bx-lock nav_icon"></i>
                        <span class="nav_name">Roles</span>
                    </a>
                    <a href="/admin/clients" class="nav_link">
                        <i class="bx bx-user nav_icon"></i>
                        <span class="nav_name">Clients</span>
                    </a>
                    <a href="/admin/products" class="nav_link">
                        <i class="bx bx-box nav_icon"></i>
                        <span class="nav_name">Products</span>
                    </a>
                    <a href="/admin/stores" class="nav_link">
                        <i class="bx bx-store nav_icon"></i>
                        <span class="nav_name">Stores</span>
                    </a>
                    <a href="/admin/moresettings" class="nav_link">
                        <i class="bx bx-cog nav_icon"></i>
                        <span class="nav_name">More Settings</span>
                    </a>
                    <a href="/admin/discountcoupons" class="nav_link">
                        <i class="bx bx-tag nav_icon"></i>
                        <span class="nav_name">Discount Coupons</span>
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <!-- Main content -->
    <div class="height-100 bg-light">
        @RenderBody()
    </div>

    <!-- Bootstrap JS and custom scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
